generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id        String    @id
  email     String    @unique
  vehicles  Vehicle[] @relation("UserVehicles")
  bids      Bid[]
  createdAt DateTime  @default(now())
}

model Vehicle {
  id            String      @id @default(cuid())
  name          String
  description   String?
  startPrice    Float
  currentPrice  Float
  bidIncrement  Float
  startTime     DateTime    @default(now())
  endTime       DateTime
  status        String      @default("ACTIVE") // ACTIVE, SOLD, CANCELLED
  color         String
  location      String
  seller        Profile     @relation("UserVehicles", fields: [sellerId], references: [id])
  sellerId      String
  vehicleType   VehicleType @relation(fields: [vehicleTypeId], references: [id])
  vehicleTypeId String
  make          Make        @relation(fields: [makeId], references: [id])
  makeId        String
  model         Model       @relation(fields: [modelId], references: [id])
  modelId       String
  bids          Bid[]
}

model VehicleType {
  id       String    @id @default(cuid())
  name     String    @unique
  makes    Make[]    @relation("VehicleTypeMakes")
  vehicles Vehicle[]
  Model    Model[]
}

model Make {
  id           String        @id @default(cuid())
  name         String        @unique
  vehicleTypes VehicleType[] @relation("VehicleTypeMakes")
  models       Model[]
  vehicles     Vehicle[]
}

model Model {
  id            String      @id @default(cuid())
  name          String
  make          Make        @relation(fields: [makeId], references: [id])
  makeId        String
  vehicleType   VehicleType @relation(fields: [vehicleTypeId], references: [id])
  vehicleTypeId String
  vehicles      Vehicle[]

  @@unique([makeId, name]) // Ensures model names are unique within a make
}

model Bid {
  id        String   @id @default(cuid())
  amount    Float
  createdAt DateTime @default(now())
  user      Profile  @relation(fields: [userId], references: [id])
  userId    String
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id])
  vehicleId String
}
